<body class="bg-info">
    <header>
        {{!-- NAVBAR --}}
        <nav class="navbar navbar-light bg-primary d-flex">
            <div class="container-fluid">
                {{!-- LOGO --}}
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="./img/miniEquinoccioLudicoLogo.png" alt="logo Equinoccio Ludico" width="30" height="30"
                        class="d-inline-block align-text-top ">
                    <div class="fw-bold p-1">Equinoccio LÃºdico</div>
                </a>
                <button id="products-link-button"
                    class="btn btn-link text-white fw-bold d-none text-decoration-none fs-4">Productos</button>
                <button id="chat-link-button"
                    class="btn btn-link text-white fw-bold d-none text-decoration-none fs-4">Chat</button>
                {{!-- BOTONES LOGIN + REGISTRO --}}
                <div id="out-account" class="justify-content-start d-none">
                    <button id="nav-signin" class="btn btn-outline-dark btn-success fw-bold me-2"
                        type="button">Login</button>
                    <button id="nav-signup" class="btn btn-outline-dark btn-secondary fw-bold"
